<title>Prikaz nepremičnin</title>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>



<h2>Dynamic Table</h2>

<table id="dynamic-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        <!-- Table rows will be added dynamically here -->
    </tbody>
</table>

<script>
    // Sample data
    var data = [
        { name: "John", age: 25, city: "New York" },
        { name: "Jane", age: 30, city: "Los Angeles" },
        { name: "Bob", age: 22, city: "Chicago" }
        // Add more objects as needed
    ];

    // Function to create table rows dynamically
    function createTableRows() {
        var tableBody = document.getElementById("dynamic-table").getElementsByTagName('tbody')[0];

        // Clear existing rows
        tableBody.innerHTML = "";

        // Iterate through data and create a new row for each object
        data.forEach(function (item) {
            var row = tableBody.insertRow();
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);

            cell1.innerHTML = item.name;
            cell2.innerHTML = item.age;
            cell3.innerHTML = item.city;
        });
    }

    // Call the function to initially populate the table
    createTableRows();
</script>
